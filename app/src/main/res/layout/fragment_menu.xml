<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                tools:context="me.aerovulpe.watportal.fragments.MenuFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tim Hortons"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_outlet_name"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/text_location"
        android:layout_alignEnd="@+id/text_location"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Student Life Centre"
        android:id="@+id/text_location"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_outlet_logo"
        android:layout_toEndOf="@+id/image_outlet_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Monday, January 5 "
        android:id="@+id/text_date"
        android:layout_below="@+id/text_location"
        android:layout_toRightOf="@+id/image_outlet_logo"
        android:layout_toEndOf="@+id/image_outlet_logo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_below="@+id/image_outlet_logo">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Breakfast"
        android:id="@+id/text_breakfast_header"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
    </ScrollView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_outlet_logo"
        android:src="@drawable/placeholder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        />


</RelativeLayout>
